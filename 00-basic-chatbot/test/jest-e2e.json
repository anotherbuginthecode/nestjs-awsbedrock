{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@helpers/(.*)": "<rootDir>/../src/helpers/$1",
    "@middleware/(.*)": "<rootDir>/../src/middleware/$1",
    "@app/(.*)": "<rootDir>/../src/app/$1"
  }
}
